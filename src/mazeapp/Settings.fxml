<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="center" hgap="10" prefHeight="248.0" prefWidth="527.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myapp.SettingsController">
	<padding>
		<Insets bottom="10" left="15" right="15" top="25" />
	</padding>
   <children>
   	<!-- TODO Add Nodes -->
   	<Text fx:id="welcomeText" fill="#313ecd" text="Settings" textAlignment="CENTER" wrappingWidth="116.2265625" GridPane.columnIndex="3" GridPane.columnSpan="2">
         <font>
            <Font name="DejaVu Serif Bold" size="20.0" />
         </font>
      </Text>
    	<Label text="First player's color:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
    	<Label text="Second player's color:" GridPane.rowIndex="2" /> 
    	
    	<HBox alignment="CENTER_LEFT" GridPane.columnIndex="3" GridPane.rowIndex="4">
       		<Button onAction="#saveSettings" prefHeight="25.0" prefWidth="127.0" text="SAVE SETTINGS" />
    	</HBox>	
      <ColorPicker fx:id="colorPickerFirst" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="4" GridPane.rowIndex="1" />
      <ColorPicker fx:id="colorPickerSecond" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="4" GridPane.rowIndex="2" />
   </children>
</GridPane>
