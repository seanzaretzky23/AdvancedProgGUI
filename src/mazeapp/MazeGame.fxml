	<center>
		<HBox BorderPane.alignment="TOP_RIGHT">
			<children>
				<VBox alignment="TOP_CENTER" prefHeight="172.0" prefWidth="250" spacing="10">
					<children>
						<Button alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="100" text="Start Game" />
						<Button alignment="CENTER" prefHeight="25.0" prefWidth="100" text="End Game" />
