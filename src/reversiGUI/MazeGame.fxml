<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reversiGUI.MazeGameController">
	<center>
		<HBox BorderPane.alignment="TOP_RIGHT">
			<children>
				<VBox alignment="TOP_CENTER" prefHeight="172.0" prefWidth="250" spacing="10">
					<padding>
						<Insets bottom="5" left="10" right="10" top="5" />
					</padding>
					<children>
                  <HBox prefHeight="23.0" prefWidth="250.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefHeight="15.0" prefWidth="108.0" text="Current Player: " />
                        <Label fx:id="whichPlayer" text="Black" />
                     </children>
                  </HBox>
                  <HBox prefHeight="24.0" prefWidth="250.0">
                     <children>
                        <Label text="First player score: " />
                        <Label fx:id="firstPlayerScore" text="2" />
                     </children>
                  </HBox>
                  <HBox prefHeight="0.0" prefWidth="72.0">
                     <children>
                        <Label prefHeight="15.0" prefWidth="148.0" text="Second player score: " />
                        <Label fx:id="secondPlayerScore" text="2" />
                     </children>
                  </HBox>
					</children>
				</VBox>
			</children>
		</HBox>
	</center>
</BorderPane>
